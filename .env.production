# Production Environment Variables
# API Configuration
VITE_API_PROVIDER=gemini
VITE_GEMINI_API_KEY=
VITE_DEEPSEEK_API_KEY=
VITE_USE_REAL_API=false
VITE_PRIMARY_API=gemini

# Branding
VITE_APP_NAME=Lumi AI
VITE_APP_TAGLINE=Your Intelligent Assistant
VITE_WELCOME_MESSAGE=Hello! I'm Lumi, your AI assistant. How can I help you today?

# Theme Colors (Hex values)
VITE_PRIMARY_COLOR=#8B5CF6
VITE_SECONDARY_COLOR=#EC4899
VITE_ACCENT_COLOR=#10B981
VITE_BACKGROUND_LIGHT=#FFFFFF
VITE_BACKGROUND_DARK=#0F172A
VITE_TEXT_LIGHT=#1E293B
VITE_TEXT_DARK=#F1F5F9

# Typography
VITE_FONT_FAMILY=Inter, system-ui, sans-serif
VITE_FONT_SIZE_BASE=16
VITE_FONT_SIZE_HEADING=24

# Layout Configuration
VITE_SIDEBAR_WIDTH=280
VITE_SIDEBAR_POSITION=left
VITE_SIDEBAR_COLLAPSED_WIDTH=60
VITE_HEADER_HEIGHT=64
VITE_FOOTER_HEIGHT=48

# Feature Toggles
VITE_ENABLE_CHAT_HISTORY=true
VITE_ENABLE_THEME_TOGGLE=true
VITE_ENABLE_SETTINGS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_SEARCH=true

# Storage Configuration
VITE_STORAGE_PREFIX=lumi_ai_
VITE_THEME_STORAGE_KEY=lumi_ai_theme
VITE_CHAT_STORAGE_KEY=lumi_ai_chats

# Performance
VITE_MAX_CHAT_HISTORY=100
VITE_AUTO_SAVE_INTERVAL=5000
VITE_DEBOUNCE_DELAY=300

# Security
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
